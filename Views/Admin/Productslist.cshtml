@model IEnumerable<ice_cream.Models.Icecreams>
@{
    ViewData["Title"] = "Productslist";
    Layout = "~/Views/Shared/Admin.cshtml";
}



    <style >
    .table th,
    .table td {
        vertical-align: middle;
        text-align: center;
    }

    .table img {
        border-radius: 50%;
    }

    .card {
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        font-size: 18px;
        font-weight: bold;
    }
</style>


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header bg-primary text-white text-center">
                <h4>Product Details</h4>
                <a asp-action="AddProducts" class="btn btn-success float-right">
                    Create New
                </a>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead class="bg-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.IcecreamId)</th>
                            <th>@Html.DisplayNameFor(model => model.Icecreamname) </th>
                            <th>@Html.DisplayNameFor(model => model.Icecreamprice)</th>
                            <th>@Html.DisplayNameFor(model => model.Image)</th>
                        </tr>
                    </thead>
                    <tbody>
                       @*  <tr>
                            <td>1</td>
                            <td>John Doe</td>
                            <td>johndoe@example.com</td>
                            <td>
                                <img src="https://via.placeholder.com/50" alt="Image" class="img-thumbnail" style="width: 50px; height: 50px;" />
                            </td>
                        </tr> *@
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.IcecreamId)</td>
                                <td>@Html.DisplayFor(modelItem => item.Icecreamname)</td>
                                <td>@Html.DisplayFor(modelItem => item.Icecreamprice)</td>
                                
                                <td>
                                    <img src="~/images/@item.Image" style="width:100px;height:100px;" />
                                </td>
                    

                                <td>
                                    <a asp-action="EditProducts" asp-route-id="@item.IcecreamId" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Edit</a>
                                    <hr />
                                    <a asp-action="DeleteProducts" asp-route-id="@item.IcecreamId" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Delete</a>
                                </td>
                            </tr>
                        }
                        <!-- Add more rows as needed -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

