@model ice_cream.Models.Books
@{
    ViewData["Title"] = "DeleteBooks";
    Layout = "~/Views/Shared/Admin.cshtml";

}

<style>
    .card {
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        font-size: 18px;
        font-weight: bold;
    }

    .form-control {
        border-radius: 6px;
    }

    button.btn-primary {
        border-radius: 6px;
        width: 100%;
    }
</style>

<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card">
            <div class="card-header bg-primary text-white text-center">
                <h4>Delete Book</h4>
            </div>
            <div class="card-body">
                <h5 class="text-center text-danger">Are you sure you want to delete this?</h5>
                <dl class="row mt-4">
                    <dt class="col-sm-4"> Book Name</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(Model => Model.Booktittle)</dd>

                    <dt class="col-sm-4">Author</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(Model => Model.Author)</dd>
                    <dt class="col-sm-4">Book Price</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(Model => Model.Price)</dd>
                    <dt class="col-sm-4">Quantity</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(Model => Model.Stock)</dd>
                    <dt class="col-sm-4">Isavailable</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(Model => Model.IsAvailable)</dd>
                    <dt class="col-sm-4">CreateDate</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(Model => Model.CreatedDate)</dd>
                    <dt class="col-sm-4">Image</dt>
                    <img src="~/bookimages/@Html.DisplayFor(modelItem => Model.Image)" style="width:100px;height:100px;border:1px solid;border-color:black" />



                </dl>
                <form asp-action="DeleteBooks" class="mt-4">
                    <input type="hidden" asp-for="BookId" />
                    <div class="d-flex justify-content-center">
                        <input type="submit" value="Delete" class="btn btn-danger mx-2" />
                        <a asp-action="AdminBooks" class="btn btn-secondary mx-2">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
