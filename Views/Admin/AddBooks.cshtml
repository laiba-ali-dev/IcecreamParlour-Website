@model ice_cream.Models.BooksViewModel
@{
    ViewData["Title"] = "AddBooks";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<style>
    .card {
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        font-size: 18px;
        font-weight: bold;
    }

    .form-control {
        border-radius: 6px;
    }

    button.btn-primary {
        border-radius: 6px;
        width: 100%;
    }
</style>

<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card">
            <div class="card-header bg-primary text-white text-center">
                <h4>Add New Book</h4>
            </div>
            <div class="card-body">
                <form asp-action="AddBooks" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <!-- Book Title Field -->
                    <div class="form-group mb-3">
                        <label asp-for="Booktittle">Book Name</label>
                        <input asp-for="Booktittle" class="form-control" id="name" placeholder="Enter Book Name" />
                    </div>

                    <!-- Author Field -->
                    <div class="form-group mb-3">
                        <label asp-for="Author">Author</label>
                        <input asp-for="Author" class="form-control" id="author" placeholder="Enter Author Name" />
                    </div>

                    <!-- Price Field -->
                    <div class="form-group mb-3">
                        <label asp-for="Price">Price</label>
                        <input asp-for="Price" class="form-control" id="price" placeholder="Enter Book  Price" />
                    </div>

                    <!-- Stock Field -->
                    <div class="form-group mb-3">
                        <label asp-for="Stock">Stock</label>
                        <input asp-for="Stock" class="form-control" id="stock" placeholder="Enter Stock Quantity" />
                    </div>

                    <!-- Photo Upload Field -->
                    <div class="form-group mb-3">
                        <label asp-for="Photo">Photo</label>
                        <input asp-for="Photo" class="form-control" type="file" />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>

                    <!-- Is Available Field -->
                    <div class="form-group mb-3">
                        <label asp-for="IsAvailable">Available</label>
                        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
                        <span asp-validation-for="IsAvailable" class="text-danger"></span>
                    </div>

                    <!-- Created Date Field -->
                    <div class="form-group mb-3">
                        <label asp-for="CreatedDate" class="control-label">Created Date</label>
                        <input asp-for="CreatedDate" class="form-control" type="date" />
                        <span asp-validation-for="CreatedDate" class="text-danger"></span>
                    </div>

                   
                    <!-- Submit Button -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
