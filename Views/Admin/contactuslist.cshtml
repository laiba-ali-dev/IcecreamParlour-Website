@model IEnumerable<ice_cream.Models.Contactus>
@{
    ViewData["Title"] = "contactuslist";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<style>
    .table th,
    .table td {
        vertical-align: middle;
        text-align: center;
    }

    .table img {
        border-radius: 50%;
    }

    .card {
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        font-size: 18px;
        font-weight: bold;
    }
</style>


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header bg-primary text-white text-center">
                <h4>Contact Us List</h4>

            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead class="bg-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Contactusid)</th>
                            <th>@Html.DisplayNameFor(model => model.Name) </th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Subject)</th>
                            <th>@Html.DisplayNameFor(model => model.Message)</th>


                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Contactusid)</td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                                <td>@Html.DisplayFor(modelItem => item.Message)</td>


                            </tr>
                        }
                        <!-- Add more rows as needed -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




