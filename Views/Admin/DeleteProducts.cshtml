@model ice_cream.Models.Icecreams
@{
    ViewData["Title"] = "DeleteProducts";
    Layout = "~/Views/Shared/Admin.cshtml";

}

<style>
    .card {
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        font-size: 18px;
        font-weight: bold;
    }

    .form-control {
        border-radius: 6px;
    }

    button.btn-primary {
        border-radius: 6px;
        width: 100%;
    }
</style>

<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card">
            <div class="card-header bg-primary text-white text-center">
                <h4>Delete Icecream</h4>
            </div>
            <div class="card-body">
                <h5 class="text-center text-danger">Are you sure you want to delete this?</h5>
                <dl class="row mt-4">
                    <dt class="col-sm-4"> Ice cream Name</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(Model => Model.Icecreamname)</dd>

                    <dt class="col-sm-4">Ice cream Price</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(Model => Model.Icecreamprice)</dd>

                   

                    <dt class="col-sm-4">Image</dt>
                    <img src="~/images/@Html.DisplayFor(modelItem => Model.Image)" style="width:100px;height:100px;border:1px solid;border-color:black" />




                </dl>
                <form asp-action="DeleteProducts" class="mt-4">
                    <input type="hidden" asp-for="IcecreamId" />
                    <div class="d-flex justify-content-center">
                        <input type="submit" value="Delete" class="btn btn-danger mx-2" />
                        <a asp-action="ProductsList" class="btn btn-secondary mx-2">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
