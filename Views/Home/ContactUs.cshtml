 @model ice_cream.Models.Contactus
 @{
    ViewData["Title"] = "ContactUs";
}


<!-- Contact Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h1 class="section-title position-relative text-center mb-5">Contact Us For Any Query</h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="contact-form bg-light rounded p-5">
                    <div id="success"></div>
                    <form asp-action="ContactUs" name="sentMessage" id="contactForm" novalidate="novalidate">
                        <div class="form-row">
                            <div class="col-sm-6 control-group">
                                <input asp-for="Name" class="form-control p-4" placeholder="Your Name" />
                                <p class="help-block text-danger"></p>
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6 control-group">
                                <input asp-for="Email" type="email" class="form-control p-4" placeholder="Your Email" />
                                <p class="help-block text-danger"></p>

                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="control-group">
                            <input asp-for="Subject" class="form-control p-4" placeholder="Subject" />
                            <p class="help-block text-danger"></p>
                            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                        </div>
                        <div class="control-group">

                            
                                <textarea asp-for="Message" class="form-control p-4" placeholder="Your Message" rows="5"></textarea>
                                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                            


                            <button class="btn btn-primary btn-block py-3 px-5" type="submit" id="sendMessageButton">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->